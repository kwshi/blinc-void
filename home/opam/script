# vi: ft=bash
# shellcheck shell=bash

local -a pkgs
pkgs=(
  'dune'
  'utop'
  'odoc'
  'odig'

  'containers'
  'linenoise'
  'fmt'
  'ppx_deriving'
  'angstrom'
  'alcotest'
  'lwt'
  'cmdliner'

  'menhir'
  'google-drive-ocamlfuse'
  'ocaml-lsp-server'
  'ocamlformat'
)

buildah run "$1" opam init -yn
buildah run "$1" opam install -y "${pkgs[@]}"
